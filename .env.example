# Server Configuration
SERVER_NAME=finland  # Change to: bahrain, germany, usa, etc.
SERVER_LOCATION="Helsinki, Finland"
SERVER_IP=AUTO  # AUTO will detect, or specify manually

# Domain Configuration (from Namecheap or any registrar)
MAIN_DOMAIN=freedomacrossborders.shop
ENABLE_PANEL=true  # Set to false for secondary servers
ENABLE_SUBSCRIPTION=true  # Only true on main server

# Ports
VPN_PORT=8443
PANEL_PORT=54321
SUBSCRIPTION_PORT=5556

# Master Server (for syncing configs)
MASTER_SERVER=https://panel.freedomacrossborders.shop
MASTER_API_KEY=generate_secure_key_here

# X-UI Admin Credentials
XRAY_USERNAME=admin
XRAY_PASSWORD=secure_password_here

# SSL Configuration
ENABLE_SSL=true
SSL_EMAIL=admin@freedomacrossborders.shop

# Client Configuration
CLIENT_ID=auto  # auto generates new, or specify to sync across servers